<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Todo:: Find a way to use the versions in packages.config -->
    <!-- !! Keep version number in sync with packages.config and tools\runjsrttests.cmd (RazzleTools) !! -->
    <IELibPath Condition="'$(IELibPath)'==''">$(SolutionDir)..\external\IELibs.1.0.10</IELibPath>
    <RazzleToolPath Condition="'$(RazzleToolPath)'==''">$(SolutionDir)..\external\RazzleTools.1.0.11</RazzleToolPath>
    <PUBLIC_ROOT Condition="'$(PUBLIC_ROOT)'==''">$(SolutionDir)..\external\SDPublics.1.0.10</PUBLIC_ROOT>

    <ObjectDirectory Condition="'$(Configuration)'=='Debug'">objchk\$(PlatformPathNameAlt)\</ObjectDirectory>
    <ObjectDirectory Condition="'$(Configuration)'!='Debug'">objfre\$(PlatformPathNameAlt)\</ObjectDirectory>

    <ManifestsInboxIncludeDirectory>$(IELibPath)\manifests\inbox\$(ObjectDirectory)</ManifestsInboxIncludeDirectory>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        <!-- For ntverp.h -->
        $(RazzleToolPath)\public\sdk\inc;
        <!-- For devtbhost.h and ScriptProjectionHost.hxx -->
        $(IELibPath);
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
      <!-- Workaround for core depdendency on IE MSRC macros. Remove when we no longer need GlobalMSRCSettings, and do not allow to make it to OSS. -->
      <ForcedIncludeFiles>GlobalMSRCSettings.h</ForcedIncludeFiles>
    </ClCompile>
    <ResourceCompile>
      <AdditionalIncludeDirectories>
        <!-- For ntverp.h -->
        $(RazzleToolPath)\public\sdk\inc;
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
    </ResourceCompile>
  </ItemDefinitionGroup>
  <!-- Git always depends on the nuget project -->
  <ItemGroup>
    <ProjectReference Condition="'$(ProjectName)'!='Chakra.NugetProject'" Include="$(MSBuildThisFileDirectory)Chakra.NugetProject\Chakra.NugetProject.vcxproj">
      <Project>{F4CEA127-8D10-4C02-BF29-41F0643C11BB}</Project>
    </ProjectReference>
  </ItemGroup>
</Project>
