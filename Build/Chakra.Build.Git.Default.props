<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Todo:: Find a way to use the versions in packages.config -->
    <!-- !! Keep version number in sync with packages.config !! -->
    <IELibPath Condition="'$(IELibPath)'==''">$(SolutionDir)..\external\IELibs.2.0.18</IELibPath>
    <RazzleToolPath Condition="'$(RazzleToolPath)'==''">$(SolutionDir)..\external\RazzleTools.2.0.18</RazzleToolPath>
    <PUBLIC_ROOT Condition="'$(PUBLIC_ROOT)'==''">$(SolutionDir)..\external\SDPublics.2.0.21</PUBLIC_ROOT>

    <ObjectDirectory Condition="'$(Configuration)'=='Debug'">objchk\$(PlatformPathNameAlt)\</ObjectDirectory>
    <ObjectDirectory Condition="'$(Configuration)'!='Debug'">objfre\$(PlatformPathNameAlt)\</ObjectDirectory>

    <InstrumentationManifestIncludeDirectory>$(IntDir)..\CoreManifests</InstrumentationManifestIncludeDirectory>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        <!-- For ntverp.h -->
        $(RazzleToolPath)\public\sdk\inc;
        <!-- For devtbhost.h and ScriptProjectionHost.hxx -->
        $(IELibPath);
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
    </ClCompile>
    <ResourceCompile>
      <AdditionalIncludeDirectories>
        <!-- For ntverp.h -->
        $(RazzleToolPath)\public\sdk\inc;
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
    </ResourceCompile>
  </ItemDefinitionGroup>
  <!-- Git always depends on the nuget project -->
  <ItemGroup>
    <ProjectReference Condition="'$(ProjectName)'!='Chakra.NugetProject'" Include="$(MSBuildThisFileDirectory)Chakra.NugetProject\Chakra.NugetProject.vcxproj">
      <Project>{F4CEA127-8D10-4C02-BF29-41F0643C11BB}</Project>
    </ProjectReference>
  </ItemGroup>
  <!-- Opened #12138625 to remove RFG specific code from Chakra -->
  <!-- <Import Project = "Chakra.Build.GuardSS.props" /> -->
</Project>
