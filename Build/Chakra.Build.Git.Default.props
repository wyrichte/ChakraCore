<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">  
  <PropertyGroup>     
    <USE_EXTERNAL_DEPENDENCIES>yes</USE_EXTERNAL_DEPENDENCIES>
  </PropertyGroup>
  <PropertyGroup>   
    <!-- How do we deal with versioning here?? -->
    <PUBLIC_ROOT Condition="'$(PUBLIC_ROOT)'==''">$(SolutionDir)..\external\SDPublics.1.0.3</PUBLIC_ROOT>
    <RazzleToolPath Condition="'$(RazzleToolPath)'==''">$(SolutionDir)..\external\RazzleTools.1.0.1</RazzleToolPath>
    <IELibPath Condition="'$(IELibPath)'==''">$(SolutionDir)..\external\IELibs.1.0.2</IELibPath>
    <RazzleToolSdkIncDirectory>$(RazzleToolPath)\public\sdk\inc\</RazzleToolSdkIncDirectory>
    
    <ObjectDirectory Condition="'$(Configuration)'=='Debug'">objchk\$(PlatformPathNameAlt)\</ObjectDirectory>
    <ObjectDirectory Condition="'$(Configuration)'!='Debug'">objfre\$(PlatformPathNameAlt)\</ObjectDirectory>

    <ManifestsInboxIncludeDirectory>$(IELibPath)\manifests\inbox\$(ObjectDirectory)</ManifestsInboxIncludeDirectory>    
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        %(AdditionalIncludeDirectories);
        $(RazzleToolPath)\public\sdk\inc;
        $(IELibPath);
      </AdditionalIncludeDirectories>
    </ClCompile>
  </ItemDefinitionGroup>
  <!-- Git always depends on the nuget project -->
  <ItemGroup>
    <ProjectReference Condition="'$(ProjectName)'!='Chakra.NugetProject'" Include="$(MSBuildThisFileDirectory)Chakra.NugetProject\Chakra.NugetProject.vcxproj">
      <Project>{F4CEA127-8D10-4C02-BF29-41F0643C11BB}</Project>
    </ProjectReference>
  </ItemGroup>
</Project>